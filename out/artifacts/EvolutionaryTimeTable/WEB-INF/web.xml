<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--
    <welcome-file-list>
        <welcome-file>Pages/login/login.html</welcome-file>
        <welcome-file>Pages/login/login.htm</welcome-file>
        <welcome-file>Pages/login/login.js</welcome-file>
    </welcome-file-list>
-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>App.Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>App.Servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurrentUserServlet</servlet-name>
        <servlet-class>App.Servlets.CurrentUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProblemsListServlet</servlet-name>
        <servlet-class>App.Servlets.ProblemsListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Pages/login/loginResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrentUserServlet</servlet-name>
        <url-pattern>/currentUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProblemsListServlet</servlet-name>
        <url-pattern>/Problem/problemList</url-pattern>
    </servlet-mapping>
</web-app>
